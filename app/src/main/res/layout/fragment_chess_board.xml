<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sandbox.spritesheetverifier2.tinker.draganddrop.chess.ChessGameFragment">

    <ImageView
        android:id="@+id/row1_column1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@id/row2_column1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/row1_column2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <ImageView
        android:id="@+id/row1_column2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFF"
        app:layout_constraintBottom_toTopOf="@id/row2_column2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/row1_column1"
        app:layout_constraintRight_toLeftOf="@id/row1_column3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <ImageView
        android:id="@+id/row1_column3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@id/row2_column3"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/row1_column2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1" />

    <!-- @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ -->

    <ImageView
        android:id="@+id/row2_column1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFF"
        app:layout_constraintBottom_toTopOf="@id/row3_column1"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/row2_column2"
        app:layout_constraintTop_toBottomOf="@id/row1_column1"
        app:layout_constraintVertical_weight="1" />

    <ImageView
        android:id="@+id/row2_column2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@id/row3_column2"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/row2_column1"
        app:layout_constraintRight_toLeftOf="@id/row2_column3"
        app:layout_constraintTop_toBottomOf="@id/row1_column2"
        app:layout_constraintVertical_weight="1" />

    <ImageView
        android:id="@+id/row2_column3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFF"
        app:layout_constraintBottom_toTopOf="@id/row3_column3"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/row2_column2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row1_column3"
        app:layout_constraintVertical_weight="1" />

    <!-- @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ -->

    <ImageView
        android:id="@+id/row3_column1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/row3_column2"
        app:layout_constraintTop_toBottomOf="@id/row2_column1"
        app:layout_constraintVertical_weight="1" />

    <ImageView
        android:id="@+id/row3_column2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#00FFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/row3_column1"
        app:layout_constraintRight_toLeftOf="@id/row3_column3"
        app:layout_constraintTop_toBottomOf="@id/row2_column2"
        app:layout_constraintVertical_weight="1" />

    <ImageView
        android:id="@+id/row3_column3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/row3_column2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/row2_column3"
        app:layout_constraintVertical_weight="1" />

</androidx.constraintlayout.widget.ConstraintLayout>